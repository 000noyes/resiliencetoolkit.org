---
/**
 * Early Access Pending Page
 *
 * Shown to authenticated users who don't yet have early access approval.
 * Used during phased launch (Phase 1A-1B).
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import { Clock, Mail, Home } from 'lucide-react';

// DISABLED - Auth removed, using fallback
const userEmail = 'your email';
---

<BaseLayout
  title="Early Access Pending - Resilience Hub Toolkit"
  description="You're on the early access list for the Resilience Hub Toolkit"
>
  <div class="min-h-screen bg-gray-50 dark:bg-gray-900 flex items-center justify-center px-4 py-12">
    <div class="max-w-md w-full">
      <!-- Card -->
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 p-8">
        <!-- Icon -->
        <div class="flex justify-center mb-6">
          <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center">
            <Clock className="w-8 h-8 text-primary" />
          </div>
        </div>

        <!-- Heading -->
        <h1 class="text-2xl font-semibold text-gray-900 dark:text-white text-center mb-3">
          You’re on the List
        </h1>

        <!-- Message -->
        <div class="space-y-4 text-gray-600 dark:text-gray-400 text-center mb-8">
          <p>
            Thanks for joining the Resilience Hub Toolkit.
          </p>  

          <p>
            We’re opening access gradually so each new group can onboard with support and give feedback that shapes the next phase.
          </p>

          <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4">
            <div class="flex items-start gap-3">
              <Mail className="w-5 h-5 text-blue-600 dark:text-blue-400 mt-0.5 flex-shrink-0" />
              <div class="text-sm text-blue-900 dark:text-blue-100 text-left">
                <p class="font-medium mb-1">We'll notify you at:</p>
                <p class="font-mono text-blue-700 dark:text-blue-300">{userEmail}</p>
              </div>
            </div>
          </div>

          <!-- <p class="text-sm">
            You’ll hear from us at {userEmail} when your access is ready — usually within 1–3 days.
          </p> -->
        </div>

        <!-- What to Expect -->
        <div class="bg-gray-50 dark:bg-gray-900 rounded-lg p-4 mb-6">
          <h2 class="text-sm font-semibold text-gray-900 dark:text-white mb-3">
            What to Expect
          </h2>
          <ul class="space-y-2 text-sm text-gray-600 dark:text-gray-400">
            <li class="flex items-start gap-2">
              <span class="text-primary mt-0.5">•</span>
              <span>You’ll receive an email when your access is approved</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-primary mt-0.5">•</span>
              <span>Simply log back in to access all toolkit modules</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-primary mt-0.5">•</span>
              <span>You’ll be part of a small wave of early users helping refine the public release</span>
            </li>
          </ul>
        </div>

        <!-- Actions -->
        <div class="flex flex-col gap-3">
          <a
            href="/"
            class="inline-flex items-center justify-center gap-2 px-4 py-3 bg-primary text-gray-900 dark:text-gray-900 rounded-lg hover:bg-primary/90 transition-colors font-medium"
          >
            <Home className="w-5 h-5" />
            Return to Home
          </a>

          <a
            href="/about"
            class="inline-flex items-center justify-center gap-2 px-4 py-3 bg-gray-100 dark:bg-gray-700 text-gray-900 dark:text-white rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors font-medium"
          >
            Learn More About the Toolkit
          </a>
        </div>

        <!-- Support -->
        <div class="mt-6 pt-6 border-t border-gray-200 dark:border-gray-700">
          <p class="text-xs text-gray-500 dark:text-gray-500 text-center">
            Questions? Contact us at{' '}
            <a href="mailto:rhizome@cafeaccess.com" class="text-primary hover:underline">
              rhizome@cafeaccess.com
            </a>
          </p>
        </div>
      </div>

      <!-- Additional Info -->
      <!-- <div class="mt-6 text-center">
        <p class="text-sm text-gray-600 dark:text-gray-400">
          While you wait, you can explore our{' '}
          <a href="/library" class="text-primary hover:underline">Resource Library</a>
          {' '}and{' '}
          <a href="/map" class="text-primary hover:underline">Community Map</a>
        </p>
      </div> -->
    </div>
  </div>
</BaseLayout>
