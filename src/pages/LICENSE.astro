      letter-spacing: 0.05em;
    }

    .nav-link {
      color: #8fd8c3;
      text-decoration: none;
      font-weight: 700;
      display: inline-flex;
      align-items: center;
      gap: 0.5em;
      transition: opacity 0.2s ease;
    }

    .nav-link:hover {
      opacity: 0.8;
    }

    .nav-bottom {
      margin-top: 3em;
      padding-top: 2em;
      border-top: 1px solid #2c2c2c;
      text-align: center;
    }

    .btn-home {
      display: inline-block;
      padding: 0.75em 1.5em;
      background: #8fd8c3;
      color: #050505;
      border-radius: 0.5em;
      text-decoration: none;
      font-weight: 700;
      transition: background 0.2s ease;
    }

    .btn-home:hover {
      background: #7bc6b0;
    }
