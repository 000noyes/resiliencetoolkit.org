    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html {
      background-color: #050505;
      color: #f8f8f2;
      font-family: 'Space Mono', 'IBM Plex Mono', 'Courier New', monospace;
      font-size: 18px;
      line-height: 1.45;
