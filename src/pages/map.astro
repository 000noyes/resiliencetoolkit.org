---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="Map - Resilience Hub" description="Local assets directory - people, places, and things">
  <div class="container mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold text-foreground mb-6">Asset Map</h1>
    <p class="text-lg text-muted-foreground mb-8">
      Local assets directory for people, places, and things. Filters, printable views, and more.
    </p>
    <div class="bg-muted p-8 rounded-lg text-center">
      <p class="text-muted-foreground">Interactive asset map coming soon...</p>
    </div>
  </div>
</BaseLayout>
