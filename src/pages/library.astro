---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="Library - Resilience Hub" description="Templates, checklists, zines, posters, and forms">
  <div class="container mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold text-foreground mb-6">Resource Library</h1>
    <p class="text-lg text-muted-foreground mb-8">
      Templates, checklists, zines, posters, and forms for building community resilience.
    </p>
    <div class="bg-muted p-8 rounded-lg text-center">
      <p class="text-muted-foreground">Library resources coming soon...</p>
    </div>
  </div>
</BaseLayout>
